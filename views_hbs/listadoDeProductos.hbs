<div class="m-4">
    <h1 class="mb-4">Lista de Productos con HBS</h1>
    {{#if productsExist}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td><img src="{{this.thumbnail}}" alt="" style="width: 40px;"></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2 class="mb-3">No hay productos</h2>
    {{/if}}

    <a href="/">
        <button type="button" class="btn btn-secondary btn-lg">Cargar Productos</button>
    </a>

</div>